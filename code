#include <bits/stdc++.h>
using namespace std;
struct s
{
    int x;
    int y;
    int z;
};
int main()
{
    int T,n,d,index,x,y,z,i,x1,y1,z1,j;
    long long int saddness,max;
   
    cin >> T;
    while(T--)
    {
         vector<struct s>v;
        cin >> n >> d;
        saddness=0;
        for(i=0;i<n;i++)
        {
            
            
            cin >> x1 >> y1 >> z1;
            struct s root;
            root.x=x1-1;
            root.y=y1;
            root.z=z1;
            v.push_back(root);
            saddness=saddness+y1*z1;
           
        }
        for(i=0;i<d;i++)
        {
            max=INT_MIN;
          for(j=0;j<v.size();j++)
          {
              if(v[j].x<=i&&v[j].y!=0&&v[j].z>=max)
              {
                  max=v[j].z;
                  index=j;
                  
              }
              
          }
          if(max!=INT_MIN)
              {
                  saddness=saddness-max;
                  v[index].y--;
               
              }
         
        }
    cout << saddness << endl ;
    }
    
    
    
    
	return 0;
}
